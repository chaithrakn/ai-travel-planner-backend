<% layout('layouts/boilerplate') %> 

<h1>All Hotels</h1>

    <% for (let hotel of hotels) { %> 
        <div class="card" mb-3>
            <div class="row">
            

                <div class="col-md-8">
                    <div class="card-body">
                        <h5 class="card-title"><%= hotel.name %> </h5>
                        
                        <p class="card-text">
                            <small class="text-muted"><%= hotel.location %>,<%= hotel.country %></small>
                        </p>
                        <a class="btn btn-primary" href="/hotels/<%= hotel._id %>">View <%= hotel.name %></a>
                    </div>
                </div>
        </div>
    </div>    
  
    <% } %> 
